<% include ./partials/header %>

    <div class="container extra-padding">
      <div class="row">
        <div class="col-lg-8">
          <h1><%= movieInfo.title %></h1>
          <p><%= movieInfo.overview %></p>
          <div class="embed-responsive embed-responsive-16by9">
            <!-- Sandbox only allows same origin and scripts -->
            <iframe class="embed-responsive-item" src="https://gomostream.com/movie/<%= movieInfo.title.replace(/\s+/g, '-').toLowerCase() %>" allowfullscreen sandbox="allow-same-origin allow-scripts" onerror="console.log('ERRRORRRR')"></iframe>
          </div>
        </div>
      </div>
    </div>
<style>
body {
  background-image: linear-gradient(to right, rgba(0,0,0,0.9),rgba(0,0,0,0.6)), url(http://image.tmdb.org/t/p/original<%= movieInfo.backdrop_path %>);
  background-position: center;
  background-size: cover;
}
</style>
