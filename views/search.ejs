<% include ./partials/header %>

  <div class="container extra-padding">
    <div class="row">

      <div class="col">
        <h2 class="text-center">TV Shows</h1>
        <div class="row">
          <% for(var i=0; i<searchResults.length; i++) { %>
            <% if (searchResults[i].media_type === 'tv') { %>
              <div class="col">
                <div class="card" style="width: 154px;">
                  <img class="card-img-top" src="http://image.tmdb.org/t/p/w154/<%= searchResults[i].poster_path %>" alt="Card image cap" onerror="this.src='/vector/placeholder.svg';">
                  <div class="card-body">
                    <span class="card-title"><%= searchResults[i].name %></span><br>
                    <a href="/watch-tv-show/<%= searchResults[i].id %>" class="btn btn-primary btn-raised ">Watch</a>
                  </div>
                </div>
              </div>
              <% } %>
            <% } %>
        </div>
      </div>

      <div class="col">
        <h2 class="text-center">Movies</h1>
        <div class="row">
          <% for(var i=0; i<searchResults.length; i++) { %>
            <% if (searchResults[i].media_type === 'movie') { %>
              <div class="col">
                <div class="card" style="width: 154px;">
                  <img class="card-img-top" src="http://image.tmdb.org/t/p/w154/<%= searchResults[i].poster_path %>" alt="Card image cap" onerror="this.src='/vector/placeholder.svg';">
                  <div class="card-body">
                    <span class="card-title"><%= searchResults[i].title %></span><br>
                    <a href="/watch-movie/<%= searchResults[i].id %>" class="btn btn-primary btn-raised ">Watch</a>
                  </div>
                </div>
              </div>
              <% } %>
            <% } %>
        </div>
      </div>

    </div>
  </div>

  <% include ./partials/footer %>
