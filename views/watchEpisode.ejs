<% include ./partials/header %>
      <!-- Sandbox only allows same origin and scripts -->
    <div class="container extra-padding">
      <div class="row">
        <div class="col-lg-8">
          <h1><%= tvInfo.name %></h1>
          <h2 class="subtext">S<%= episodeInfo.season_number %>:E<%= episodeInfo.episode_number %> "<%= episodeInfo.name %>"</h2>
          <p><%= episodeInfo.overview %></p>
          <div class="embed-responsive embed-responsive-16by9">
            <video controls="">
              <source src="http://ctvod.run/ctv/guestmod/<%= tvInfo.name.replace(/[^\w\s]/gi, '').replace(/\s+/g, '.').toLowerCase() %>.s<%= seasonNum%>e<%= episodeNum %>.mp4" type="video/mp4">
              Please update your browser to play this content
            </video>
          </div>
        </div>
      </div>
    </div>
<style>
body {
  background-image: linear-gradient(to right, rgba(0,0,0,0.9),rgba(0,0,0,0.6)), url(http://image.tmdb.org/t/p/original<%= tvInfo.backdrop_path %>);
  background-position: center;
  background-size: cover;
}
</style>
<% include ./partials/footer %>
